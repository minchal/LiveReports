<h1>Login</h1> 
 
<%= form_tag login_path do %> 
  <div class="field"> 
    <%= label_tag :Login %><br /> 
    <%= text_field_tag :login %> 
  </div> 
  <div class="field"> 
    <%= label_tag :Password %><br /> 
    <%= password_field_tag :pass %> 
  </div> 
  <div class="actions"> 
    <%= submit_tag 'Login' %> 
  </div> 
<% end %> 